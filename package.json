{
    "name": "comicinator",
    "version": "0.0.1",
    "description": "Comic book reader and organizer",
    "author": "Kris Mackintosh",
    "license": "MIT",
    "main": "dist/index.js",
    "scripts": {
        "ng": "ng",
        "build-electron": "tsc --project projects/electron/tsconfig.json",
        "build-comicinator": "ng build",
        "serve-comicinator": "ng serve",
        "wait-for-comicinator": "wait-on http://localhost:4200",
        "start": "concurrently \"npm run build-electron\" \"npm run serve-comicinator\" \"npm run wait-for-comicinator && electron-forge start\"",
        "package": "npm run build-electron && npm run build-comicinator && electron-forge package",
        "make": "npm run build-electron && npm run build-comicinator && electron-forge make",
        "publish-app": "npm run build-electron && npm run build-comicinator && electron-forge publish"
    },
    "dependencies": {
        "@angular/common": "^19.2.0",
        "@angular/compiler": "^19.2.0",
        "@angular/core": "^19.2.0",
        "@angular/forms": "^19.2.0",
        "@angular/platform-browser": "^19.2.0",
        "@angular/platform-browser-dynamic": "^19.2.0",
        "@angular/router": "^19.2.0",
        "adm-zip": "^0.5.16",
        "better-sqlite3": "^11.9.1",
        "electron-squirrel-startup": "^1.0.1",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^19.2.10",
        "@angular/cli": "^19.2.10",
        "@angular/compiler-cli": "^19.2.0",
        "@electron-forge/cli": "^7.8.0",
        "@electron-forge/maker-deb": "^7.8.0",
        "@electron-forge/maker-rpm": "^7.8.0",
        "@electron-forge/maker-squirrel": "^7.8.0",
        "@electron-forge/maker-zip": "^7.8.0",
        "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
        "@types/adm-zip": "^0.5.7",
        "@types/jasmine": "~5.1.0",
        "@types/node": "^22.15.3",
        "concurrently": "^9.1.2",
        "electron": "^36.0.1",
        "jasmine-core": "~5.6.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "typescript": "~5.7.2",
        "wait-on": "^8.0.3"
    }
}
